<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name, required: true%>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_field :date, id: :event_date, required: true%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :event_description, required: true%>
  </div>

  <div class="field">
    <%= form.label :event_type %>
    <%= form.text_field :event_type, id: :event_type, required: true%>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :location, required: true%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>