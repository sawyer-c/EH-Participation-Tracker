<header>
    <div class="fixed-top">
        <nav id="header">
            <div class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
              <%= link_to image_tag("favicon.png", width: 50), {action: 'list', controller: 'book'} %>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav navbar-nav-main mr-auto">
                  <li class="nav-item <%= "active" if params[:controller] == "book" %>"><%= link_to "Books", book_list_path, :class => "nav-link" %></li>
                  <li class="nav-item <%= "active" if params[:controller] == "subjects" %>"><%= link_to "Subjects", subjects_list_path, :class => "nav-link" %></li>
                </ul>

                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#aboutModal">About</a>
                  </li>
                </ul>
              </div>
            </div>
        </nav>
    </div>
</header>