<% provide(:title, @book.title) %>

<div class="jumbotron">
  <h1 class="display-3"><%= @book.title %></h1>
  <%= link_to 'Back to List', {:action => 'list'} %>
  <br />
  <p class="lead">

     <strong>Price: </strong> $<%= @book.price %><br />
     <strong>Subject: </strong> <%= link_to @book.subject.name,
     :action => "show_subjects", :controller=>"subjects", :id => @book.subject.id %><br />
     <strong>Created:</strong> <%= @book.created_at %><br />

  </p>
  <hr class="my-4">
  <p><%= @book.author %></p>
  <p class="lead">
    <%= link_to '<i class="fa fa-pencil fa-lg" aria-hidden="true" data-toggle="tooltip" title="Edit"></i>'.html_safe, {:action => "edit",
               :id => @book.id} %>
    <%= link_to '<i class="fa fa-trash fa-lg" aria-hidden="true" data-toggle="tooltip" title="Delete"></i>'.html_safe, {:action => 'delete', :id => @book.id},
                  :confirm => "Are you sure you want to delete this item?" %>
  </p>
</div>