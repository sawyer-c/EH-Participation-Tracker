<% provide(:title, "Editing - #{@book.title}") %>

<h1>Edit Book - <%=@book.title %></h1>

<%= link_to 'Back', {:action => 'list'} %>
<hr />
<%= form_for @book, :url =>{:action => "update", :id =>@book} do |f| %>

<div class="form-group">
    <label for = "book_title">Title</label>:
    <%= f.text_field 'title', :id => "book_title", :class => "form-control", :placeholder => "Book Name" %>
</div>

<div class="form-group">
    <label for = "book_price">Price</label>:
    <%= f.text_field 'price', :id => "book_price", :class => "form-control", :placeholder => "Price" %>
</div>

<div class="form-group">
    <label for = "book_subject_id">Subject</label>:
    <%= f.collection_select :subject_id, Subject.all, :id, :name, {:prompt=>true}, { :class => 'form-control' } %>
</div>

<div class="form-group">
    <label for = "book_author">author</label>:
    <%= f.text_area 'author', :id => "book_author", :class => "form-control", :placeholder => "author of Book" %></p>
</div>

<%= f.submit "Save changes", :class => "btn btn-info" %>

<% end -%>